# infrastructure/app.py
#!/usr/bin/env python3
import os
from aws_cdk import App
from stacks.expense_tracker_stack import ExpenseTrackerStack

app = App()

ExpenseTrackerStack(
    app, 
    "ExpenseTrackerStack",
    env={
        'account': os.environ.get('CDK_DEFAULT_ACCOUNT'),
        'region': os.environ.get('CDK_DEFAULT_REGION', 'us-east-1')
    }
)

app.synth()
